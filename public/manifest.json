{
  "manifest_version": 3,
  "version": "1.0.1",
  "name": "Font Changer",
  "description": "Change the font of any website",

  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "permissions": ["scripting"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
